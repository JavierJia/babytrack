<h2>Jasmine logs</h2>
<h3>Feedings</h3>
<table style="width: 50%">
  <thead>
    <tr>
      <th>Time</th>
      <th>Kind</th>
      <th>Vol</th>
    </tr>
  </thead>

  <tbody>
  <% @feedings.each do |feeding| %>
    <tr>
    <td><%= feeding.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%m/%d/%Y %I:%M%p") %></td>
    <td><%= feeding.kind %></td>
    <td><%= feeding.volumn %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Feeding', new_feeding_path, class: 'button' %>

<h3>Poop</h3>
<table style="width: 50%">
  <thead>
    <tr>
      <th>Time</th>
      <th>Kind</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
  <% @outs.each do |out| %>
    <tr>
    <td><%= out.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%m/%d/%Y %I:%M%p") %></td>
    <td><%= out.kind %></td>
    <td><%= out.descrp %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Poop', new_out_path, class: 'button' %>
